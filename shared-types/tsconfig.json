{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "jsx": "react-jsx"
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/examples"
    ]
}